<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="BOSS_ROLE" author="stoica.vladut">

        <comment>BOSS_ROLE TABLE CREATION</comment>

        <createTable tableName="BOSS_ROLE" tablespace="${tbs.smalldata}"
                     remarks="Holds main information about the link">

            <column name="ID" type="NUMBER(18, 0)" remarks="Unique record identifier.">
                <constraints primaryKey="true" primaryKeyName="BOSS_ROLE_ID_PK"/>
            </column>

            <column name="CODE" type="VARCHAR2(30)" remarks="Unique code of role.">
                <constraints nullable="false"/>
            </column>

            <column name="ROLE_TYPE" type="VARCHAR2(30)" remarks="User or Supervisor.">
                <constraints nullable="false"/>
            </column>

            <column name="DEPARTMENT_ID" type="VARCHAR2(30)" remarks="HCUS department.">
                <constraints nullable="false"/>
            </column>

            <column name="ACTIVE_FLAG" type="NUMBER(1, 0)" >
                <constraints nullable="false"/>
            </column>

            <column name="CREATED_DATE" type="DATETIME" remarks="Date when record was created in the database">
                <constraints nullable="false"/>
            </column>

            <column name="CREATED_BY" type="VARCHAR2(50)" remarks="User who created record">
                <constraints nullable="false"/>
            </column>

            <column name="UPDATED_BY" type="VARCHAR2(30)" remarks="The last User who updated record">
                <constraints nullable="false"/>
            </column>

            <column name="UPDATED_DATE" type="DATETIME" remarks="The last date when record was updated">
                <constraints nullable="false"/>
            </column>

            <column name="VERSION" type="NUMBER(18, 0)" remarks="Record version generated by Hibernate" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="DESCRIPTION" type="VARCHAR2(500)" remarks="Description of privilege.">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <!-- rollback statement -->
        <rollback>
            <dropTable tableName="BOSS_ROLE"/>
        </rollback>

    </changeSet>

</databaseChangeLog>