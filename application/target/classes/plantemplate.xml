<?xml version="1.0" encoding="UTF-8"?>
<deployment-plan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.oracle.com/weblogic/deployment-plan"
        xsi:schemaLocation="http://xmlns.oracle.com/weblogic/deployment-plan http://xmlns.oracle.com/weblogic/deployment-plan/1.0/deployment-plan.xsd">
    <description>Deployment plan</description>
    <application-name>${dp.application.name}</application-name>
    <variable-definition>
        <variable>
            <name>config.complain.url</name>
            <value>${dp.complaints-web.config.complain.url}</value>
        </variable>
        <variable>
            <name>config.boss.url</name>
            <value>${dp.boss.config.boss.url}</value>
        </variable>
        <variable>
            <name>context.root</name>
            <value>${dp.complaints-web.context.root}</value>
        </variable>
        <variable>
            <name>spring.profiles.active</name>
            <value>${dp.complaints-web.spring.profiles.active}</value>
        </variable>
        <variable>
            <name>managedDs.jndiName</name>
            <value>${dp.complaints-web.managedDs.jndiName}</value>
        </variable>
        <variable>
            <name>logging.baseDir</name>
            <value>${dp.complaints-web.logging.baseDir}</value>
        </variable>
        <variable>
            <name>security.realmName</name>
            <value>${dp.complaints-web.security.realmName}</value>
        </variable>
        <variable>
            <name>security.sso.server.login.url</name>
            <value>${dp.complaints-web.security.sso.server.login.url}</value>
        </variable>
        <variable>
            <name>security.sso.server.logout.url</name>
            <value>${dp.complaints-web.security.sso.server.logout.url}</value>
        </variable>
        <variable>
            <name>security.sso.server.identity.url</name>
            <value>${dp.complaints-web.security.sso.server.identity.url}</value>
        </variable>
        <variable>
            <name>security.sso.server.login.goto.port</name>
            <value>${dp.complaints-web.security.sso.server.login.goto.port}</value>
        </variable>
        <variable>
            <name>security.sso.server.login.goto.server.name</name>
            <value>${dp.complaints-web.security.sso.server.login.goto.server.name}</value>
        </variable>
        <variable>
            <name>security.sso.server.connection.timeout</name>
            <value>${dp.complaints-web.security.sso.server.connection.timeout}</value>
        </variable>
        <variable>
            <name>security.sso.server.socket.timeout</name>
            <value>${dp.complaints-web.security.sso.server.socket.timeout}</value>
        </variable>
    </variable-definition>
    <module-override>
        <module-name>${dp.application.name}.war</module-name>
        <module-type>war</module-type>
        <module-descriptor external="false">
            <root-element>web-app</root-element>
            <uri>WEB-INF/web.xml</uri>
            <variable-assignment>
                <name>config.complain.url</name>
                <xpath>/web-app/context-param/[param-name="config.complain.url"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>config.boss.url</name>
                <xpath>/web-app/context-param/[param-name="config.boss.url"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>spring.profiles.active</name>
                <xpath>/web-app/context-param/[param-name="spring.profiles.active"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>managedDs.jndiName</name>
                <xpath>/web-app/context-param/[param-name="managedDs.jndiName"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>logging.baseDir</name>
                <xpath>/web-app/context-param/[param-name="logging.baseDir"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.realmName</name>
                <xpath>/web-app/context-param/[param-name="security.realmName"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.login.url</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.login.url"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.logout.url</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.logout.url"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.identity.url</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.identity.url"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.login.goto.port</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.login.goto.port"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.login.goto.server.name</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.login.goto.server.name"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.connection.timeout</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.connection.timeout"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
            <variable-assignment>
                <name>security.sso.server.socket.timeout</name>
                <xpath>/web-app/context-param/[param-name="security.sso.server.socket.timeout"]/param-value</xpath>
                <operation>replace</operation>
            </variable-assignment>
        </module-descriptor>
        <module-descriptor external="false">
            <root-element>weblogic-web-app</root-element>
            <uri>WEB-INF/weblogic.xml</uri>
            <variable-assignment>
                <name>context.root</name>
                <xpath>/weblogic-web-app/context-root</xpath>
                <operation>replace</operation>
            </variable-assignment>
        </module-descriptor>
    </module-override>
</deployment-plan>